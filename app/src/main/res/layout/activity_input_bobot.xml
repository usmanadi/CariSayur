<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usman.carisayur.activity.BobotActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp">

        <EditText
            android:id="@+id/inJarak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Bobot Kriteria Jarak"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/inLayout">

        <EditText
            android:id="@+id/inHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Bobot Kriteria Harga"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/inLayout2">

        <EditText
            android:id="@+id/inJumlahSayur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Bobot Kriteria Jumlah Jenis Sayur"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/inLayout3">

        <EditText
            android:id="@+id/inRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Bobot Kriteria Rating"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inLayout4"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="*Bobot digunakan untuk menentukan nilai prioritas. Semakin tinggi nilai bobot suatu kriteria maka semakin diprioritaskan kriteria tersebut"/>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="berikutnya"
        android:background="@drawable/button_bg_rounded_corners"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/WhiteText"
        android:layout_margin="24dp"/>

</RelativeLayout>