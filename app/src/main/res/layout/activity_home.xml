<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usman.carisayur.activity.HomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bgtop1"/>

    <TextView
        android:id="@+id/halo"
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo!"
        android:textSize="20dp"
        android:textColor="@color/WhiteText"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:text="Tekan tombol dibawah untuk mulai
menggunakan aplikasi ini!"
        android:textSize="20dp"
        android:textColor="@color/WhiteText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/halo"/>

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temukan_tempat_penjualan_sayuran_organik_yang_sesuai_dengan_keinginanmu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="90dp"
        android:textColor="@color/text"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_above="@id/btnCari"/>

    <Button
        android:id="@+id/btnCari"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="mulai"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:textColor="@color/WhiteText"/>

</RelativeLayout>